	mail = francisco.llanquipichun@gmail.com
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[color]
	ui = true
[alias]
	nicelog = log --oneline --graph --all
[commit]
	template = ~/dotfiles/git/.gitCommitMsg
